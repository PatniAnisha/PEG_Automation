public class InvoiceAgainstPO extends eInvoice_CommonFunctions {

	private ExtentTest logger;
	private WebDriver driver;
	private Date invoiceDate;
	private String invoiceNo;

	public InvoiceAgainstPO(WebDriver driver, ExtentTest logger) {
		super(driver, logger);
		this.driver = driver;
		this.logger = logger;
	}

	public InvoiceAgainstPO(WebDriver driver, ExtentTest logger, String invoiceNo, Date invoiceDate) {
		super(driver, logger);
		this.driver = driver;
		this.logger = logger;
		this.invoiceDate = invoiceDate;
		this.invoiceNo = invoiceNo;

	}

	/**
	 * <b>Function:</b> createNewInvoice
	 * 
	 * @author Anisha
	 * @param invoiceNo
	 * @since May 2018
	 * @throws Exception
	 * @return status
	 */
	public boolean createNewInvoice() {

		boolean status = false;
		try {
			sendKeys(By.id("txtInvoiceNumber"), invoiceNo);
			selectDate(invoiceDate);
			// TODO invoice due date
			// add attachment
			addAttachment();
			// TODO add remit to address
			scroll_into_view_element(findElement(By.id("einvoiceItemList")));
			if (findElement(By.id("vng-collapsibleGrid")).isDisplayed())
				click(By.xpath("//*[@id='vng-collapsibleGrid']//tr[1]/td[1]/input"));

			click(By.id("btnSubmit"));
			waitUntilInvisibilityOfElement(By.xpath("//*[@id='status_overlay_updateInvoice']/div"));
			if (findElement(By.xpath("//span[text()='Submit for approval']")).isDisplayed())
				click(By.xpath("//div[@class='b-box']//input[@value='Send for confirmation']"));
			waitUntilInvisibilityOfElement(By.xpath("//*[@id='status_overlay_updateInvoice']/div"));
			// validate if invoice is created
			if(findElement(By.xpath("//*[@id='invoiceGrid']/tbody/tr[*]/td[1]/a[text()='"+invoiceNo+"']")).isDisplayed())
				status = true;
		
		} catch (Exception e) {

		}
		return status;

	}

}
