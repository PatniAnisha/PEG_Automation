public class InvoiceNonPO extends eInvoice_CommonFunctions {

	private ExtentTest logger;
	private WebDriver driver;
	private String supplierName;
	private String paymentTerm;
	private String currency_value;
	private String invoiceNo;
	private String purchaseType;
	private Date invoiceDueDate;
	//private Date invoiceDate;
	private String invoiceDate;

	
	private String item_no;
	private String description;
	private String product_cat;
	private String market_prc;
	private String quantity;
	private String GLType;
	private String GLAccount;

	public InvoiceNonPO(WebDriver driver, ExtentTest logger) {
		super(driver, logger);
		this.logger = logger;
		this.driver = driver;
	}

	public InvoiceNonPO(WebDriver driver, ExtentTest logger, String supplierName, String paymentTerm,
			String currency_value, String invoiceDate, String purchaseType,
			String item_no, String description, String product_cat, String market_prc, String quantity, String GLType, String GLAccount) {
		super(driver, logger);
		this.logger = logger;
		this.driver = driver;
		this.supplierName = supplierName;
		this.paymentTerm = paymentTerm;
		this.currency_value = currency_value;
		//this.invoiceNo = invoiceNo;
		this.purchaseType = purchaseType;
		//this.invoiceDueDate = invoiceDueDate;
		this.invoiceDate = invoiceDate;
		this.item_no = item_no;
		this.description = description;
		this.product_cat = product_cat;
		this.market_prc = market_prc;
		this.quantity = quantity;
		this.GLType = GLType;
		this.GLAccount = GLAccount;

	}
	
	/**
	 * <b>Function:</b> createNewInvoice
	 * 
	 * @author Anisha
	 * @since May 2018
	 * @param none
	 * @throws Exception
	 * @return status
	 */
	public boolean createNewInvoice() {
		boolean status = false;
		try {
			//selectSupplier(supplierName);
			enterText_AutoComplete(By.id("txtSupplierName"), supplierName);
			Thread.sleep(3000);
			findElement(By.xpath("//*[@id='slctPaymentTerms']/option[contains(text(),'" + paymentTerm + "')]")).click();
			Thread.sleep(2000);
			selectAddress();
			Thread.sleep(2000);
			selectCurrency(currency_value);
			/*
			 * invoice details
			 */
			String invoiceNo = String.valueOf(generateNo());
			sendKeys(By.id("txtInvoiceNumber"), invoiceNo);
			WebElement elem = findElement(By.xpath("//input[@name='txtInvoiceDate']/following-sibling::img"));
			JavascriptExecutor js = (JavascriptExecutor)driver;
			js.executeScript("arguments[0].click()", elem);
			
			//findElement(By.xpath("//input[@name='txtInvoiceDate']/following-sibling::img")).click();
			selectDate_v1(invoiceDate);
			/*findElement(By.xpath("//input[@name='txtInvoiceDueDate']/following-sibling::img")).click();
			selectDate_v1(invoiceDueDate);*/
			findElement(By.xpath("//*[@id='slctPurchaseType']/option[contains(text(),'" + purchaseType + "')]")).click();
			addAttachment();
			scroll_into_view_element(
					findElement(By.xpath(".//*[@id='addMoreItems']//span[contains(text(),'Add Item')]")));
			findElement(By.xpath(".//*[@id='addMoreItems']//span[contains(text(),'Add Item')]")).click();
			Thread.sleep(2000);
			//add_item(item_no, description, product_cat, market_prc, quantity, GLType, GLAccount);
			add_item(description, product_cat, market_prc, quantity, GLType);
			Thread.sleep(2000);
			findElement(By.id("btnSubmit")).click();
			findElement(By.xpath("//div[contains(@class,'workflowDialog ')]//input[contains(@class,'dev_submit ')]")).click();
			waitUntilVisibilityOfElement(By.xpath("//div[@id='hedaerSuccessBox']//li"));
			System.out.println("created invoice nonPO : "+invoiceNo);
		} catch (Exception e) {
			e.printStackTrace();
		}
		return status;

	}

}
